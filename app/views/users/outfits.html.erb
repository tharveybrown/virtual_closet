<% if @outfits %>

  <% @outfits.each do |o| %>
  <h2><%= o.created_at.strftime("%m/%d/%Y") %></h2>
 
    <div class="card-group"> 
        <% o.clothes.each do |clothe| %>

            <div class="col-md-4 d-flex align-items-stretch card-column">
                <div class="card" style="width: inherit;">
                    <div class="card-header">
                        <% if clothe.clothing_type  %>
                            <%= clothe.clothing_type %>
                        <% end  %>
                    </div>  

                    <div class="card-body">
                        <% if clothe.clothing_pic.attached?  %>
                            <img class="card-img-top" src="<%=(url_for(clothe.clothing_pic))%>" alt="Card image cap">
                        <% end  %>
                    </div>

                    <div class="card-footer text-center"> 
                        <%= button_to( "View Item", clothe_path(clothe.id), :method => :get, :class => "btn btn-primary" ) %>
                    </div>
                    
                </div>
            </div>
        <% end %>
  </div>
  <hr class="my-4">
  <% end  %>
  
<% end  %>