<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="about-text go-to">
            <h3 class="dark-color"><%= @user.full_name %>  <%= link_to(edit_user_path(@user.id), method: "get") do %>
            <i class="edit-color fa fa-edit"></i>
            <% end %></h3>
          
            <p>Email: <mark><%= @user.email %></mark></p>
            <div class="row about-list">
              <div class="col-lg-12">
                <div class="media">
                    <label>Address: </label>
                    <p><%= @user.address %></p>
                </div>
                <div class="media">
                    <label>Longitude: </label>
                    <p><%=@user.longitude.round(2)%></p>
                </div>
                <div class="media">
                    <label>Latitude: </label>
                    <p><%= @user.latitude.round(2) %></p>
                </div>
              </div>
        </div>
      </div>
    </div>
        
  </div>
    <div class="counter">
        <div class="row">
            <% if @user.clothes %>
            <div class="col-6 col-lg-3">
                <div class="count-data text-center">
                    <h6 class="count h2" data-to="500" data-speed="500"><%= @user.clothes.count %></h6>
                    <p class="m-0px font-w-600"><%= pluralize(@user.clothes.count, "Item of clothing") %></p>
                </div>
            </div>
            <% end  %>
            
            <div class="col-6 col-lg-3">
                <div class="count-data text-center">
                    <h6 class="count h2" data-to="150" data-speed="150"><%= @user.closet.outfits.count %></h6>
                    <p class="m-0px font-w-600">Outfits</p>
                </div>
            </div>

              <div class="col-6 col-lg-3">
                <div class="count-data text-center">
                    <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
                        <h6 class="count h2" data-to="150" data-speed="150"><input type=submit value='logout' class="btn btn-secondary"></h6>
                    <% end %>
                    <p class="m-0px font-w-600">Sign out</p>
                </div>
            </div>

              <div class="col-6 col-lg-3">
                <div class="count-data text-center">
                    <%= form_tag user_path(@user.id), method: "delete" do %>
                        <h6 class="count h2" data-to="150" data-speed="150"><input type=submit value='Delete Account' class="btn btn-danger"></h6>
                    <% end %>
                    <p class="m-0px font-w-600">Delete Account</p>
                </div>
            </div>
        </div>
      </div>
  </div>
</section>