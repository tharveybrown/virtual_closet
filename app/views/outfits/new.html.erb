
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-3">Get a Random Outfit</h1>
            <p class="lead">Create an outfit from your closet</p>
            <div class="form-group">
                <%= button_to "Random Outfit", outfits_random_path, :class => "btn btn-primary", :method => :post %>
            </div> 
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-3">Steal Their Look</h1>
            <p class="lead">Add an image URL to find clothes</p>
            <%= form_for :mtl, url: "look" do |f| %>
            <div class="form-group">
                <%= f.label :image_url %>
                <%= f.text_field :image_url %>
            </div>
            <div class="form-check">
                <%= f.radio_button :gender, "Male", :class => "form-check-input"%>
                <label for="Male" class="form-check-label">Men's</label>
                </div>

                <div class="form-check">
                <%= f.radio_button :gender, "Female", :class => "form-check-input" %>
                <label for="Female" class="form-check-label">Women's</label>
                </div>  
            
                <div class="form-group">
                <%= f.submit "Steal Their Look", :class => "btn btn-primary"%>
                </div>
            </div>
            <% end %>
        </div>
    </div>
  
